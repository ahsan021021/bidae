    <script>
        // Create stars for background
        document.addEventListener('DOMContentLoaded', function() {
            const starsContainer = document.getElementById('stars');
            const starsCount = 100;
            
            for (let i = 0; i &lt; starsCount; i++) {
                const star = document.createElement('div');
                star.classList.add('star');
                
                // Random position
                const x = Math.random() * 100;
                const y = Math.random() * 100;
                
                // Random size
                const size = Math.random() * 2 + 1;
                
                // Random animation duration and delay
                const duration = Math.random() * 3 + 2;
                const delay = Math.random() * 5;
                
                star.style.left = `${x}%`;
                star.style.top = `${y}%`;
                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                star.style.setProperty('--duration', `${duration}s`);
                star.style.setProperty('--delay', `${delay}s`);
                
                starsContainer.appendChild(star);
            }
        });

        $(document).ready(function () {
            // Configure toastr
            toastr.options = {
                closeButton: true,
                progressBar: true,
                positionClass: "toast-top-right",
                timeOut: 3000
            };
            
            // Initialize DataTable with options
            var dataTable = $('#dataTable').DataTable({
                "paging": true, // Enable pagination
                "searching": true, // Enable search
                "ordering": true, // Enable sorting
                "info": true, // Show information
                "responsive": true, // Make table responsive
                "language": {
                    "search": "Search users:",
                    "lengthMenu": "Show _MENU_ users per page",
                    "info": "Showing _START_ to _END_ of _TOTAL_ users"
                }
            });

            // Show loading spinner when search is initiated
            $('#dataTable_filter input').on('keyup', function () {
                $('#loadingSpinner').show();
            });

            // Hide loading spinner when search is completed
            $('#dataTable').on('draw.dt', function () {
                $('#loadingSpinner').hide();
            });
            
            // Calculate and update stats
            function updateStats() {
                const users = Array.from(document.querySelectorAll('#dataTable tbody tr'));
                const totalUsers = users.length;
                
                // Set total users count
                document.getElementById('totalUsers').textContent = totalUsers;
                
                // Calculate paid users
                let paidCount = 0;
                let trialCount = 0;
                
                users.forEach(user => {
                    const subscriptionType = user.querySelector('.subscription-badge').textContent.trim();
                    if (subscriptionType === 'monthly' || subscriptionType === 'semi-annual' || subscriptionType === 'annual') {
                        paidCount++;
                    } else if (subscriptionType === 'trial') {
                        trialCount++;
                    }
                });
                
                document.getElementById('paidUsers').textContent = paidCount;
                document.getElementById('trialUsers').textContent = trialCount;
                
                // Calculate conversion rate
                const conversionRate = trialCount > 0 ? Math.round((paidCount / (paidCount + trialCount)) * 100) : 0;
                document.getElementById('conversionRate').textContent = `${conversionRate}%`;
            }
            
            // Call updateStats after a short delay
            setTimeout(updateStats, 500);
        });
        
        // Function to update subscription type
        function updateSubscriptionType(userId) {
            // Get the selected subscription type from the dropdown
            const selectBox = document.getElementById('subscriptionType_' + userId);
            const newSubscriptionType = selectBox.value;

            // Show loading spinner
            $('#loadingSpinner').show();

            // Send AJAX request to update the record with the new subscription type
            $.ajax({
                url: '/admin/editSubscription',
                method: 'POST',
                data: { userId: userId, newSubscriptionType: newSubscriptionType },
                success: function (response) {
                    // Hide loading spinner
                    $('#loadingSpinner').hide();
                    
                    // Show toastr success message
                    toastr.success('Subscription type updated successfully!');
                    
                    // Update the badge in the table
                    const row = selectBox.closest('tr');
                    const badgeCell = row.querySelector('td:nth-child(7)');
                    
                    // Remove old badge classes
                    const oldBadge = badgeCell.querySelector('.subscription-badge');
                    oldBadge.className = 'subscription-badge ' + newSubscriptionType;
                    oldBadge.textContent = newSubscriptionType;
                    
                    // Update stats
                    setTimeout(function() {
                        const users = Array.from(document.querySelectorAll('#dataTable tbody tr'));
                        const totalUsers = users.length;
                        
                        // Calculate paid users
                        let paidCount = 0;
                        let trialCount = 0;
                        
                        users.forEach(user => {
                            const subscriptionType = user.querySelector('.subscription-badge').textContent.trim();
                            if (subscriptionType === 'monthly' || subscriptionType === 'semi-annual' || subscriptionType === 'annual') {
                                paidCount++;
                            } else if (subscriptionType === 'trial') {
                                trialCount++;
                            }
                        });
                        
                        document.getElementById('paidUsers').textContent = paidCount;
                        document.getElementById('trialUsers').textContent = trialCount;
                        
                        // Calculate conversion rate
                        const conversionRate = trialCount > 0 ? Math.round((paidCount / (paidCount + trialCount)) * 100) : 0;
                        document.getElementById('conversionRate').textContent = `${conversionRate}%`;
                    }, 500);
                },
                error: function (xhr, status, error) {
                    // Hide loading spinner
                    $('#loadingSpinner').hide();
                    
                    // Show toastr error message
                    toastr.error('Error updating subscription type.');
                    console.error(error);
                }
            });
        }
    </script>