        .upgrade-fulltime { background: #52bb52; }
        .upgrade-urgent { background: #eb3730; }
        .upgrade-recruiter { background: #7d30c9; }
        
        /* Pagination */
        .search-result-pagination ul {
            display: flex;
            list-style: none;
            padding: 0;
