    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        // Create stars for background
        document.addEventListener('DOMContentLoaded', function() {
            const starsContainer = document.getElementById('stars');
            const starsCount = 100;
            
            for (let i = 0; i < starsCount; i++) {
                const star = document.createElement('div');
                star.classList.add('star');
                
                // Random position
                const x = Math.random() * 100;
                const y = Math.random() * 100;
                
                // Random size
                const size = Math.random() * 2 + 1;
                
                // Random animation duration and delay
                const duration = Math.random() * 3 + 2;
                const delay = Math.random() * 5;
                
                star.style.left = `${x}%`;
                star.style.top = `${y}%`;
                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                star.style.setProperty('--duration', `${duration}s`);
                star.style.setProperty('--delay', `${delay}s`);
                
                starsContainer.appendChild(star);
            }
        });

        $(document).ready(function () {
            // Configure toastr
            toastr.options = {
                closeButton: true,
                progressBar: true,
                positionClass: "toast-top-right",
                timeOut: 3000
            };
            
            // Initialize DataTable with options
            var dataTable = $('#dataTable').DataTable({
                "paging": true, // Enable pagination
                "searching": true, // Enable search
                "ordering": true, // Enable sorting
                "info": true, // Show information
                "responsive": true, // Make table responsive
                "language": {
                    "search": "Search users:",
                    "lengthMenu": "Show _MENU_ users per page",
                    "info": "Showing _START_ to _END_ of _TOTAL_ users"
                }
            });

            // Show loading spinner when search is initiated
            $('#dataTable_filter input').on('keyup', function () {
                $('#loadingSpinner').show();
            });

            // Hide loading spinner when search is completed
            $('#dataTable').on('draw.dt', function () {
                $('#loadingSpinner').hide();
            });
            
            // Calculate and update stats
            function updateStats() {
                const users = Array.from(document.querySelectorAll('#dataTable tbody tr'));
                const totalUsers = users.length;
                
                // Set total users count
                animateCount('totalUsers', 0, totalUsers, 1500);
                
                // Calculate active users (placeholder logic - replace with actual logic)
                const activeUsers = Math.floor(totalUsers * 0.85); // Assuming 85% are active
                animateCount('activeUsers', 0, activeUsers, 1500);
                
                // Calculate average age
                let totalAge = 0;
                let maleCount = 0;
                
                users.forEach(user => {
                    const ageCell = user.children[2].textContent.trim();
                    const genderCell = user.children[3].textContent.trim().toLowerCase();
                    
                    if (ageCell) {
                        totalAge += parseInt(ageCell);
                    }
                    
                    if (genderCell === 'male') {
                        maleCount++;
                    }
                });
                
                const avgAge = totalUsers > 0 ? Math.round(totalAge / totalUsers) : 0;
                animateCount('avgAge', 0, avgAge, 1500);
                
                // Calculate gender ratio
                const malePercentage = totalUsers > 0 ? Math.round((maleCount / totalUsers) * 100) : 0;
                document.getElementById('genderRatio').textContent = `${malePercentage}%`;
            }
            
            // Animate counting
            function animateCount(elementId, start, end, duration) {
                const element = document.getElementById(elementId);
                const range = end - start;
                const increment = end > start ? 1 : -1;
                const stepTime = Math.abs(Math.floor(duration / range)) || 50;
                let current = start;
                
                const timer = setInterval(function() {
                    current += increment;
                    element.textContent = current;
                    if (current == end) {
                        clearInterval(timer);
                    }
                }, stepTime);
            }
            
            // Call updateStats after a short delay
            setTimeout(updateStats, 500);
        });
    </script>
