    <!-- Scripts -->
    <script src="/assets/jquery.min.js"></script>
    <script src="/assets/bootstrap.bundle.min.js"></script>
    <script src="/assets/jquery.easing.min.js"></script>
    <script src="/assets/sb-admin-2.min.js?v=6"></script>
    <script src="/assets/jquery.dataTables.min.js"></script>
    <script src="/assets/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.9.0/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        // Create stars for background
        document.addEventListener('DOMContentLoaded', function() {
            const starsContainer = document.getElementById('stars');
            const starsCount = 100;
            
            for (let i = 0; i < starsCount; i++) {
                const star = document.createElement('div');
                star.classList.add('star');
                
                // Random position
                const x = Math.random() * 100;
                const y = Math.random() * 100;
                
                // Random size
                const size = Math.random() * 2 + 1;
                
                // Random animation duration and delay
                const duration = Math.random() * 3 + 2;
                const delay = Math.random() * 5;
                
                star.style.left = `${x}%`;
                star.style.top = `${y}%`;
                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                star.style.setProperty('--duration', `${duration}s`);
                star.style.setProperty('--delay', `${delay}s`);
                
                starsContainer.appendChild(star);
            }
        });

        $(document).ready(function () {
            // Configure toastr
            toastr.options = {
                closeButton: true,
                progressBar: true,
                positionClass: "toast-top-right",
                timeOut: 3000
            };
            
            // Initialize DataTable with options
            var dataTable = $('#dataTable').DataTable({
                "paging": true, // Enable pagination
                "searching": true, // Enable search
                "ordering": true, // Enable sorting
                "info": true, // Show information
                "responsive": true, // Make table responsive
                "language": {
                    "search": "Search users:",
                    "lengthMenu": "Show _MENU_ users per page",
                    "info": "Showing _START_ to _END_ of _TOTAL_ subscribers"
                }
            });

            // Show loading spinner when search is initiated
            $('#dataTable_filter input').on('keyup', function () {
                $('#loadingSpinner').show();
            });

            // Hide loading spinner when search is completed
            $('#dataTable').on('draw.dt', function () {
                $('#loadingSpinner').hide();
            });
            
            // Calculate and update stats
            function updateStats() {
                const users = Array.from(document.querySelectorAll('#dataTable tbody tr'));
                const totalUsers = users.length;
                
                // Get current date
                const currentDate = new Date();
                const currentMonth = currentDate.getMonth();
                const currentYear = currentDate.getFullYear();
                
                // Count active subscriptions (end date is in the future)
                let activeSubscriptions = 0;
                let expiringThisMonth = 0;
                let totalDays = 0;
                
                users.forEach(user => {
                    const endDateCell = user.children[7].textContent.trim();
                    if (endDateCell) {
                        const endDate = new Date(endDateCell);
                        
                        // Check if subscription is active
                        if (endDate > currentDate) {
                            activeSubscriptions++;
                            
                            // Check if subscription expires this month
                            if (endDate.getMonth() === currentMonth && endDate.getFullYear() === currentYear) {
                                expiringThisMonth++;
                            }
                        }
                        
                        // Calculate subscription duration
                        const startDateCell = user.children[6].textContent.trim();
                        if (startDateCell) {
                            const startDate = new Date(startDateCell);
                            const durationDays = Math.round((endDate - startDate) / (1000 * 60 * 60 * 24));
                            totalDays += durationDays;
                        }
                    }
                });
                
                // Calculate average subscription duration
                const avgDuration = totalUsers > 0 ? Math.round(totalDays / totalUsers) : 0;
                
                // Animate counting up
                animateCount('totalUsers', 0, totalUsers, 1500);
                animateCount('activeSubscriptions', 0, activeSubscriptions, 1500);
                animateCount('expiringSubscriptions', 0, expiringThisMonth, 1500);
                animateCount('avgDuration', 0, avgDuration, 1500);
            }
            
            // Animate counting
            function animateCount(elementId, start, end, duration) {
                const element = document.getElementById(elementId);
                const range = end - start;
                const increment = end > start ? 1 : -1;
                const stepTime = Math.abs(Math.floor(duration / range)) || 50;
                let current = start;
                
                const timer = setInterval(function() {
                    current += increment;
                    element.textContent = current;
                    if (current == end) {
                        clearInterval(timer);
                    }
                }, stepTime);
            }
            
            // Call updateStats after a short delay
            setTimeout(updateStats, 500);

            // Initialize datepicker for elements with the 'datepicker' class
            $('.datepicker').datepicker({
                format: 'M dd yyyy', // Date format
                autoclose: true, // Close the datepicker when a date is selected
                todayHighlight: true, // Highlight today's date
                templates: {
                    leftArrow: '<i class="fas fa-chevron-left"></i>',
                    rightArrow: '<i class="fas fa-chevron-right"></i>'
                }
            });

            // Handle change event when a date is selected
            $('.datepicker').on('changeDate', function (e) {
                const userId = $(this).data('user-id');
                const dateType = $(this).data('date-type');
                const selectedDate = e.format();
                
                // Add loading state
                $(this).addClass('bg-info bg-opacity-25');
                $(this).prop('disabled', true);

                // Send an AJAX request to update the user's end date
                $.ajax({
                    method: 'POST',
                    url: '/admin/editDates', // Specify the URL for updating the end date
                    data: {
                        userId: userId,
                        dateType: dateType,
                        selectedDate: selectedDate
                    },
                    success: function (response) {
                        // Handle success response
                        console.log(response);
                        
                        // Remove loading state
                        $('.datepicker[data-user-id="' + userId + '"]').removeClass('bg-info bg-opacity-25');
                        $('.datepicker[data-user-id="' + userId + '"]').prop('disabled', false);
                        
                        // Show toastr success message
                        toastr.success('Subscription date updated successfully!');
                        
                        // Update stats after a short delay
                        setTimeout(updateStats, 500);
                    },
                    error: function (xhr, status, error) {
                        // Handle error response
                        console.error(error);
                        
                        // Remove loading state
                        $('.datepicker[data-user-id="' + userId + '"]').removeClass('bg-info bg-opacity-25');
                        $('.datepicker[data-user-id="' + userId + '"]').prop('disabled', false);
                        
                        // Show toastr error message
                        toastr.error('Error updating subscription date. Please try again.');
                    }
                });
            });
        });
    </script>
