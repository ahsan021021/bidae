                                        </div>
                                        <div class="modal-footer border-top border-primary">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div id="loadingSpinner" style="display: none; text-align: center; margin-top: 20px;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading...</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/assets/jquery.min.js"></script>
    <script src="/assets/bootstrap.bundle.min.js"></script>
    <script src="/assets/jquery.easing.min.js"></script>
    <script src="/assets/sb-admin-2.min.js?v=6"></script>
    <script src="/assets/jquery.dataTables.min.js"></script>
    <script src="/assets/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        // Create stars for background
        document.addEventListener('DOMContentLoaded', function() {
            const starsContainer = document.getElementById('stars');
            const starsCount = 100;
            
            for (let i = 0; i < starsCount; i++) {
                const star = document.createElement('div');
                star.classList.add('star');
                
                // Random position
                const x = Math.random() * 100;
                const y = Math.random() * 100;
                
                // Random size
                const size = Math.random() * 2 + 1;
                
                // Random animation duration and delay
                const duration = Math.random() * 3 + 2;
                const delay = Math.random() * 5;
                
                star.style.left = `${x}%`;
                star.style.top = `${y}%`;
                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                star.style.setProperty('--duration', `${duration}s`);
                star.style.setProperty('--delay', `${delay}s`);
                
                starsContainer.appendChild(star);
            }
        });

        $(document).ready(function () {
            // Configure toastr
            toastr.options = {
                closeButton: true,
                progressBar: true,
                positionClass: "toast-top-right",
                timeOut: 3000
            };
            
            // Initialize DataTable with options
            var dataTable = $('#dataTable').DataTable({
                "paging": true, // Enable pagination
                "searching": true, // Enable search
                "ordering": true, // Enable sorting
                "info": true // Show information
            });

            // Show loading spinner when search is initiated
            $('#dataTable_filter input').on('keyup', function () {
                $('#loadingSpinner').show();
            });

            // Hide loading spinner when search is completed
            $('#dataTable').on('draw.dt', function () {
                $('#loadingSpinner').hide();
            });
            
            // Function to replace content with input field
            function replaceWithInputField(userId, bidsAllow) {
                // Create input field
                const inputField = document.createElement('input');
                inputField.type = 'text';
                inputField.value = bidsAllow; // Provide initial value
                inputField.className = 'form-control'; // Add Bootstrap class for styling

                // Set onchange event handler to update record
                inputField.onchange = function () {
                    const newValue = this.value;
                    updateRecord(userId, newValue);
                };

                // Find container element and replace content with input field
                const container = document.getElementById('inputField_' + userId);
                container.innerHTML = '';
                container.appendChild(inputField);
            }

            // Function to update record via AJAX
            function updateRecord(userId, newValue) {
                // Send AJAX request to update the record with the new value
                $.ajax({
                    url: '/admin/bidsAllowed',
                    method: 'POST',
                    data: { userId: userId, newValue: newValue },
                    success: function (response) {
                        // Handle success response
                        console.log(response);
                        // Show toastr success message
                        toastr.success('Record updated successfully!');
                        // Reload page after 2 seconds
                        setTimeout(function () {
                            location.reload();
                        }, 2000);
                    },
                    error: function (xhr, status, error) {
                        // Handle error
                        console.error(error);
                        // Show toastr error message
                        toastr.error('Error updating record.');
                    }
                });
            }

            // Replace content with input field for each user
            <% users.forEach((user) => { %>
                replaceWithInputField('<%= user._id %>', '<%= user.bidsAllow %>');
            <% }); %>
        });
    </script>
</body>

</html>