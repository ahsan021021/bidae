            color: var(--text-light);
            -ms-flex: 1 1 auto;
            flex: 1 1 auto;
            padding: 0px 30px;
            position: relative;
            display: inline-block;
            height: 500px;
            overflow-y: scroll;
            -webkit-overflow-scrolling: touch;
            overflow-x: hidden;
            border-top: 20px solid var(--card-bg);
            border-bottom: 20px solid var(--card-bg);
            border-radius: 12px;
        }

        .guide-content img {
            width: 100%;
            border-radius: 8px;
            margin: 15px 0;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        .guide-nav {
