        }

        .guide-inner h5 {
            color: var(--secondary);
            margin-top: 15px;
            font-size: 1.35rem;
            margin-bottom: 10px;
        }

        .guide-inner h6 {
            color: var(--secondary);
            font-style: italic;
            font-size: 1.05rem;
            font-weight: 600;
            margin-top: 15px;
            margin-bottom: 5px;
        }

        .guide-inner p {
            margin-bottom: 10px;
            font-size: 16px;
            line-height: 1.5;
        }

        .guide-content ol,
        .guide-content ul {
            margin-bottom: 10px;
            font-size: 16px;
            line-height: 1.5;
            padding-left: 20px;
        }

        .guide-content li {
            margin-bottom: 5px;
        }

        .guide-nav-level a span {
            font-size: 16px;
        }

        a:not([href]):not([tabindex]) {
            color: var(--text-light);
        }

        a:not([href]):not([tabindex]):focus,
        a:not([href]):not([tabindex]):hover {
            color: var(--secondary);
        }

        a[data-bs-toggle="collapse"][aria-expanded="true"] i.fa:before {
            content: "\f106";
        }
        
        /* Dropdown Menu */
        .dropdown-menu {
            background-color: var(--medium-blue);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            padding: 12px 0;
        }
        
        .dropdown-item {
            color: var(--text-light);
            padding: 10px 20px;
            transition: all 0.2s ease;
        }
        
        .dropdown-item:hover {
            background-color: rgba(59, 130, 246, 0.1);
            color: #fff;
        }
        
        .dropdown-divider {
            border-top: 1px solid var(--border-color);
            margin: 8px 0;
        }
        
        /* Profile Image */
        .img-profile {
            width: 40px;
            height: 40px;
            object-fit: cover;
            border: 2px solid var(--border-color);
        }
        
        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .navbar-brand {
                margin-right: 20px;
            }
            
            .card-body {
                padding: 16px;
            }
        }
        
        /* Guide Content Links */
        .guide-content a {
            color: var(--secondary);
            text-decoration: none;
            transition: all 0.2s ease;
        }
        
        .guide-content a:hover {
            text-decoration: underline;
        }
        
        /* Guide Content Code */
        .guide-content code {
            background-color: rgba(15, 23, 42, 0.6);
            padding: 2px 6px;
            border-radius: 4px;
            font-family: monospace;
            color: var(--secondary);
        }
        
        /* Guide Content Blockquote */
        .guide-content blockquote {
            border-left: 4px solid var(--secondary);
            padding-left: 16px;
            margin-left: 0;
            color: var(--text-lighter);
        }
        
        /* Guide Content Table */
        .guide-content table {
            width: 100%;
            margin-bottom: 20px;
            border-collapse: collapse;
        }
        
        .guide-content table th,
        .guide-content table td {
            padding: 10px;
            border: 1px solid var(--border-color);
        }
        
        .guide-content table th {
            background-color: rgba(15, 23, 42, 0.6);
            font-weight: 600;
        }
        
        .guide-content table tr:nth-child(even) {
            background-color: rgba(15, 23, 42, 0.3);
        }
        
        /* Guide Content Note */
        .guide-note {
            background-color: rgba(59, 130, 246, 0.1);
            border-left: 4px solid var(--secondary);
            padding: 15px;
            margin: 15px 0;
            border-radius: 0 8px 8px 0;
        }
        
        .guide-note p:last-child {
            margin-bottom: 0;
        }
        
        /* Guide Content Warning */
        .guide-warning {
            background-color: rgba(245, 158, 11, 0.1);
            border-left: 4px solid var(--warning);
            padding: 15px;
            margin: 15px 0;
            border-radius: 0 8px 8px 0;
        }
        
        .guide-warning p:last-child {
            margin-bottom: 0;
        }
        
        /* Guide Content Tip */
        .guide-tip {
            background-color: rgba(16, 185, 129, 0.1);
            border-left: 4px solid var(--success);
            padding: 15px;
            margin: 15px 0;
            border-radius: 0 8px 8px 0;
        }
        
        .guide-tip p:last-child {
            margin-bottom: 0;
        }
    </style>
</head>

