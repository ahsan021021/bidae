    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const starsContainer = document.getElementById('stars-container');
            const starsCount = 100;

            for (let i = 0; i < starsCount; i++) {
                const star = document.createElement('div');
                star.classList.add('star');

                const x = Math.random() * 100;
                const y = Math.random() * 100;
                const size = Math.random() * 2 + 1;
                const duration = Math.random() * 3 + 2;
                const delay = Math.random() * 5;

                star.style.left = `${x}%`;
                star.style.top = `${y}%`;
                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                star.style.setProperty('--duration', `${duration}s`);
                star.style.setProperty('--delay', `${delay}s`);

                starsContainer.appendChild(star);
            }
        });

        $(document).ready(function() {
            var timeLimit = -1;
            var bidLimit = -1;

            function renderSummary() {
                $('.summary').hide();

                if (timeLimit > 0 || bidLimit > 0)
                    $('.summary-new-time-bids').show();

                if (timeLimit == -1 && bidLimit == -1)
                    $('.summary-current-time-bids').show();
                else if (timeLimit == -1)
                    $('.summary-current-time').show();
                else if (bidLimit == -1)
                    $('.summary-current-bids').show();

                if (timeLimit > 0 && bidLimit > 0)
                    $('.summary-new-time-bids b').html('after ' + timeLimit + ' hours or after placing ' + bidLimit + ' bids, whichever happen first');
                else if (timeLimit > 0)
                    $('.summary-new-time-bids b').html('after ' + timeLimit + ' hours');
                else if (bidLimit > 0)
                    $('.summary-new-time-bids b').html('after placing ' + bidLimit + ' bids');
            }

            $('#input-autobid_delay').change(function() {
                $('.summary-interval strong').html($(this).val() + ' seconds');
            });

            $('#input-autobid_time').change(function() {
                val = $(this).find(':selected').val();
                $('.summary-interval b').html('1 bid after every ' + val + ' minute');
            });

            $('#input-autobid_time_limit').change(function() {
                timeLimit = parseInt($(this).find(':selected').val());

                renderSummary();
            });

            $('#input-autobid_bids_limit').change(function() {
                bidLimit = parseInt($(this).find(':selected').val());

                renderSummary();
            });

            $('#input-autobid_status').change(function() {
                if ($(this).prop('checked')) {
                    $(this).parents('.form-group').siblings('.form-group').fadeIn(200);
                    $('.div-summary').fadeIn(200);
                } else {
                    $(this).parents('.form-group').siblings('.form-group').fadeOut(200);
                    $('.div-summary').fadeOut(200);
                }
            });
        });
