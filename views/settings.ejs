const value = $(this).val().trim();
if (value) {
const skillTag = $('<span class="skill-tag"></span>').text(value);
const removeIcon = $('<i class="fas fa-times ms-2"></i>');

removeIcon.on('click', function() {
$(this).parent().remove();
});

skillTag.append(removeIcon);
$(this).before(skillTag);
$(this).val('');
}
}
});

