    <script type="text/javascript">
        // Create stars for the background animation
        document.addEventListener('DOMContentLoaded', function() {
            const starsContainer = document.querySelector('.stars');
            const starsCount = 100;
            
            for (let i = 0; i < starsCount; i++) {
                const star = document.createElement('div');
                star.classList.add('star');
                star.style.top = `${Math.random() * 100}%`;
                star.style.left = `${Math.random() * 100}%`;
                star.style.animationDelay = `${Math.random() * 5}s`;
                starsContainer.appendChild(star);
            }
            
            // Check for URL message parameter
            const urlParams = new URLSearchParams(window.location.search);
            const message = urlParams.get('message');
            if (message) {
                alert(message);
            }
        });
        
        $(document).ready(function () {
            // Initialize toastr
            toastr.options = {
                "closeButton": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "timeOut": "3000"
            };
            
            // Initialize sortable for priority modal
            $("#sortable").sortable({
                update: function (event, ui) {
                    $.each($('.priority-box-number'), function (index, val) {
                        $(val).html(index + 1);
                    });
                }
            });
            $("#sortable").disableSelection();
            
            // Handle priority save button
            $('.btn-submit-priority').click(function (e) {
                e.preventDefault();
                
                // Create an array to hold the order of skills
                var skillOrder = [];
                $('#sortable li').each(function (index) {
                    // Push each skill's name into the array
                    var skillName = $(this).find('.priority-box-name').text().trim();
                    skillOrder.push(skillName);
                });
                
                // AJAX request to the server
                $.ajax({
                    url: '/saveSkillsPriority',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(skillOrder),
                    success: function (response) {
                        toastr.success('Skills priority saved successfully');
                        $('#priorityModal').modal('hide');
                    },
                    error: function (error) {
                        toastr.error('Error saving skills priority');
                    }
                });
            });
            
            // Initialize excluded skills select2
            <% if (excluded_skills.length === 0) { %>
                let excludedSkills = [];
            <% } else { %>
                let excludedSkills = <%- JSON.stringify(excluded_skills) %>;
            <% } %>
            
            var allSkills = [
                // All skills data would be here
            ];
            
            // Prepare the select element with options
            allSkills.forEach(skill => {
                $('#excluded-skills').append(new Option(skill.tag, skill.tag));
            });
            
            // Initialize Select2 on the select element
            $('#excluded-skills').select2({
                placeholder: "Select skills to exclude",
                allowClear: true,
                theme: "classic",
                dropdownParent: $('form').last(),
                width: '100%'
            });
            
            // Set default selected options based on excludedSkills
            $('#excluded-skills').val(excludedSkills).trigger('change');
            
            // Toggle settings sidebar on mobile
            $('.setting-collpase-btn').on('click', function() {
                $('.setting-sidebar').slideToggle();
                $(this).text($(this).text() === 'Show Settings Menu' ? 'Hide Settings Menu' : 'Show Settings Menu');
            });
        });
    </script>
